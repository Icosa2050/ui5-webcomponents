<div class="ui5-tokenizer-root">
	<span id="{{_id}}-hiddenText" class="ui5-hidden-text">{{tokenizerLabel}}</span>

	<div
		class="ui5-tokenizer--content"
		@ui5-delete="{{_delete}}"
		@click="{{_click}}"
		@mousedown="{{_onmousedown}}"
		@keydown="{{_onkeydown}}"
		@focusout="{{_onfocusout}}"
		@focusin="{{_onfocusin}}"
		@ui5-select="{{onTokenSelect}}"
		role="listbox"
		aria-labelledby="{{_id}}-hiddenText"
	>
		{{#each tokens}}
			<slot name="{{this._individualSlot}}"></slot>
		{{/each}}
	</div>

	{{#if showNMore}}
		<span
			@click="{{_handleNMoreClick}}"
			class="ui5-tokenizer-more-text"
			part="n-more-text"
		>{{_nMoreText}}</span>
	{{/if}}
</div>

{{>include "./TokenizerPopover.hbs"}}