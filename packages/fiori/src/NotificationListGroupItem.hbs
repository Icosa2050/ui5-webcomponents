<li
	class="ui5-nli-group-root ui5-nli-focusable"
	@focusin="{{_onfocusin}}"
	@focusout="{{_onfocusout}}"
	@keydown="{{_onkeydown}}"
	role="listitem"
	tabindex="{{forcedTabIndex}}"
	aria-expanded="{{_ariaExpanded}}"
	aria-labelledby="{{ariaLabelledBy}}"
>
	<div class="ui5-nli-group-header">
		<ui5-button
			icon={{groupCollapsedIcon}}
			design="Transparent"
			@click="{{_onBtnToggleClick}}"
			class="ui5-nli-group-toggle-btn"
			tooltip="{{toggleBtnAccessibleName}}"
			aria-label="{{toggleBtnAccessibleName}}"
		></ui5-button>

		<div id="{{_id}}-title-text" class="ui5-nli-group-title-text" part="title-text">
			{{titleText}}
		</div>

		<div class="ui5-nli-group-divider"></div>

		<span id="{{_id}}-invisibleText" class="ui5-hidden-text">{{accInvisibleText}}</span>
	</div>

	<ui5-list class="ui5-nli-group-items">
		<slot></slot>
	</ui5-list>

	{{#if busy}}
		<ui5-busy-indicator
				delay="{{busyDelay}}"
				active
				size="Medium"
				class="ui5-nli-busy"
		></ui5-busy-indicator>
	{{/if}}
</li>
